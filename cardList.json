{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/cardList.json",
  "title": "Card List",
  "description": "A list of cards",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "header",
    "heroList",
    "slider",
    "cards"
  ],
  "type": "object",
  "properties": {
    "header": {
      "type": "string",
      "title": "Header",
      "description": "Header/Title for the card list",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 50
    },
    "heroList": {
      "type": "boolean",
      "title": "Hero format",
      "description": "Hero format supports exactly 3 cards"
    },
    "slider":{
      "type": "boolean",
      "title": "Slider",
      "description": "Does the card list display as a slider? If so it will show a maximum of 3 at one time and no hero list"
    },
    "cards": {
      "type": "array",
      "title": "Cards",
      "description": "Please select the cards to display in this list",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "",
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/card.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 1,
      "maxItems": 6
    }
  }
}
