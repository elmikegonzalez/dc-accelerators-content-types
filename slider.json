{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/slider.json",
  "title": "Slider Accelerator",
  "description": "Slider Accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "slides",
    "loadingColour",
    "loadingPosition",
    "loop",
    "navigationDots"
  ],
  "type": "object",
  "properties": {
    "slides": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "slides",
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/banner.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/image.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/video.json"
                ]
              }
            }
          }
        ]
      },
      "title": "Slides",
      "description": "",
      "minItems": 1,
      "maxItems": 8
    },
    "loop": {
      "type": "boolean",
      "title": "Loop slider",
      "description": ""
    },
    "navigationDots": {
      "type": "boolean",
      "title": "Navigation Dots",
      "description": ""
    }
  }
}
