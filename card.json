{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/card.json",
  "title": "Card",
  "description": "A single card of content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "image",
    "cardName",
    "cardNameFont",
    "cardNameFontSize",
    "cardNameFontWeight",
    "cardNameFontStyle",
    "cardNameFontColor",
    "description",
    "descriptionFont",
    "descriptionFontSize",
    "descriptionFontWeight",
    "descriptionFontStyle",
    "descriptionFontColor",
    "linkValue",
    "link"
  ],
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "title": "Image",
      "description": "Image used in the card",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/image.json"
        }
      ]
    },
    "cardName": {
      "type": "string",
      "title": "Name",
      "description": "Name of the card",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 150
    },
    "description": {
      "type": "string",
      "title": "Description",
      "description": "Card description",
      "validation": "Please enter less than 50 characters",
      "minLength": 0,
      "maxLength": 200
    },
    "links": {
      "type": "array",
      "title": "Links",
      "description": "Links for the card",
      "items": {
        "$ref": "{CONTENT_TYPE_BASEPATH}/link.json"
      },
      "minItems": 0,
      "maxItems": 4
    },
    "style": {
      "type": "string",
      "title": "Style",
      "description": "Add classname for CSS styling",
      "validation": "Please enter between 0 and 100 characters",
      "minLength": 0,
      "maxLength": 100
    },
    "descriptionFont": {
      "title": "Description Font",
      "description": "Pick from the list of available fonts",
      "type": "string",
      "enum": [
        "proxima-nova",
        "proxima-nova-condensed",
        "proxima-nova-extra-condensed",
        "chinchilla",
        "continuo",
        "grandma",
        "alternate-gothic-no-2-d",
        "josefin-slab",
        "trajan-pro-3",
        "azo-sans-uber",
        "hwt-republic-gothic-outline",
        "objektiv-mk1",
        "old-man-eloquent",
        "emily-austin",
        "lamar-pen",
        "mrs-eaves-xl-serif",
        "termina",
        "rift-soft",
        "axia-stencil",
        "farm-new",
        "big-caslon-fb",
        "bureau-grot",
        "bureau-grot-condensed",
        "miller-banner",
        "odile",
        "dapifer-stencil",
        "active",
        "bebas-neue-rounded",
        "smoothy"
      ]
    },
    "descriptionFontSize": {
      "type": "number",
      "title": "Description Font Size",
      "description": "Font size",
      "validation": "Please enter a value between 12 and 128px",
      "minimum": 12,
      "maximum": 200
    },
    "descriptionFontWeight": {
      "type": "number",
      "title": "Description Font Weight",
      "description": "Font Weight",
      "validation": "Please enter a value between 100 and 600",
      "minimum": 100,
      "maximum": 700
    },
    "descriptionFontStyle": {
      "type": "string",
      "title": "Description Font Style",
      "description": "Font Style",
      "enum": [
        "normal",
        "italic",
        "oblique"
      ]
    },
    "descriptionFontColor": {
      "type": "string",
      "format": "color",
      "title": "Description Font Color",
      "description": "Choose description font color"
    },
    "cardNameFont": {
      "title": "Description Font",
      "description": "Pick from the list of available fonts",
      "type": "string",
      "enum": [
        "proxima-nova",
        "proxima-nova-condensed",
        "proxima-nova-extra-condensed",
        "chinchilla",
        "continuo",
        "grandma",
        "alternate-gothic-no-2-d",
        "josefin-slab",
        "trajan-pro-3",
        "azo-sans-uber",
        "hwt-republic-gothic-outline",
        "objektiv-mk1",
        "old-man-eloquent",
        "emily-austin",
        "lamar-pen",
        "mrs-eaves-xl-serif",
        "termina",
        "rift-soft",
        "axia-stencil",
        "farm-new",
        "big-caslon-fb",
        "bureau-grot",
        "bureau-grot-condensed",
        "miller-banner",
        "odile",
        "dapifer-stencil",
        "active",
        "bebas-neue-rounded",
        "smoothy"
      ]
    },
    "cardNameFontSize": {
      "type": "number",
      "title": "Description Font Size",
      "description": "Font size",
      "validation": "Please enter a value between 12 and 128px",
      "minimum": 12,
      "maximum": 200
    },
    "cardNameFontWeight": {
      "type": "number",
      "title": "Description Font Weight",
      "description": "Font Weight",
      "validation": "Please enter a value between 100 and 600",
      "minimum": 100,
      "maximum": 700
    },
    "cardNameFontStyle": {
      "type": "string",
      "title": "Description Font Style",
      "description": "Font Style",
      "enum": [
        "normal",
        "italic",
        "oblique"
      ]
    },
    "cardNameFontColor": {
      "type": "string",
      "format": "color",
      "title": "Description Font Color",
      "description": "Choose description font color"
    }
  }
}
