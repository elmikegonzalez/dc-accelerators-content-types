{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/localizedbanner.json",
  "title": "Localized Banner",
  "description": "A reusable content type for banner content",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "type": "object",
  "properties": {
    "img": {
      "type": "object",
      "title": "Image",
      "description": "Localized background image for the banner",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/localizedimage.json"
        }
      ]
    },
    "header": {
      "title": "Header",
      "description": "Header text for the banner",
      "validation": "Please enter less than 255 characters",
      "allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
      ],
      "properties": {
        "values": {
          "items": {
            "properties": {
              "value": {
                "title": "Header",
                "description": "Header text for the banner",
                "type": "string",
                "minLength": 0,
                "maxLength": 255
              }
            }
          }
        }
      }
    },
    "subheader": {
      "allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
      ],
      "properties": {
        "values": {
          "items": {
            "properties": {
              "value": {
                "title": "Subheader",
                "description": "Sub header text for the banner",
                "type": "string",
                "minLength": 0,
                "maxLength": 255
              }
            }
          }
        }
      }
    },
    "description": {
      "allOf": [
        {
          "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
        }
      ],
      "properties": {
        "values": {
          "items": {
            "properties": {
              "value": {
                "title": "Localized Description",
                "description": "Localized Description text for the banner",
                "validation": "Please enter less than 2000 characters",
                "type": "string",
                "minLength": 0,
                "maxLength": 2000
              }
            }
          }
        }
      }
    },
    "button": {
      "title": "Link / Button",
      "description": "The action link / button for the banner",
      "type": "array",
      "items": {
        "$ref": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/localizedlink.json"
      },
      "minItems": 0,
      "maxItems": 2,
      "_interpolate": true
    },
    "alignment": {
      "type": "string",
      "title": "Alignment",
      "description": "Alignment of the text content in the banner (left/center/right). Default is left",
      "enum": [
        "left",
        "right",
        "center"
      ]
    },
    "hideBG": {
      "type": "boolean",
      "title": "Transparent Background",
      "description": "Background is transparent behind the banner text. Default is false"
    },
    "stackMobileLayout": {
      "type": "boolean",
      "title": "Stack Mobile Layout",
      "description": "Enable to allow banner text to stack underneath the image on small screens. Default is false"
    }
  },
  "propertyOrder": [
    "img",
    "header",
    "subheader",
    "description",
    "button",
    "alignment",
    "stackMobileLayout",
    "hideBG"
  ]
}
