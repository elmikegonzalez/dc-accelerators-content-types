{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/roundel.json",
  "title": "Roundel",
  "description": "An additional layer which can be added to an image composite",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "roundel",
    "roundelRatio",
    "roundelPosition"
  ],
  "type": "object",
  "properties": {
    "roundel": {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/image-link"
    },
    "roundelRatio": {
      "type": "number",
      "title": "Roundel Ratio",
      "description": "A value between 0 and 10 e.g. 0.6",
      "minimum": 0,
      "maximum": 10
    },
    "roundelPosition": {
      "title": "Roundel Position",
      "description": "Roundel Position",
      "type": "string",
      "enum": [
        "Top Left",
        "Top Right",
        "Bottom Left",
        "Bottom Right",
        "Middle Center"
      ]
    }
  }
}
