{
  "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
  "id": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/blog.json",
  "title": "Blog Accelerator",
  "description": "Blog Accelerator",
  "allOf": [
    {
      "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
    }
  ],
  "propertyOrder": [
    "snippet",
    "title",
    "keywords",
    "content"
  ],
  "required": [
    "content-asset-id"
  ],
  "content-asset-id": {
    "type": "string",
    "title": "Content Asset ID",
    "minLength": 1,
    "maxLength": 256
  },
  "type": "object",
  "properties": {
    "snippet": {
      "type": "object",
      "title": "Snippet",
      "description": "",
      "allOf": [
        {
          "$ref": "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/snippet.json"
        }
      ]
    },
    "title": {
      "type": "string",
      "minLength": 0,
      "maxLength": 255,
      "title": "Title",
      "description": ""
    },
    "content": {
      "type": "array",
      "items": {
        "allOf": [
          {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
          },
          {
            "properties": {
              "contentType": {
                "title": "Content",
                "enum": [
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/banner.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/image.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/video.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/text.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/cardlist.json",
                  "{CONTENT_TYPE_BASEPATH}/DynamicContentTypes/blog.json"
                ]
              }
            }
          }
        ]
      },
      "minItems": 0,
      "maxItems": 20,
      "title": "Content",
      "description": ""
    }
  }
}
